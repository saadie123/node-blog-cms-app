<div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4">{{post.title}}</h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="#">{{post.user.firstName}}</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{dateFormat date 'MMMM Do YYYY'}}</p>

          <hr>

          <!-- Preview Image -->
          <img class="img-fluid rounded" src="/uploads/{{post.postImage}}" alt="">

          <hr>

          <!-- Post Content -->
          <p class="lead">{{post.description}}</p>
          <hr>
          {{#if user}}
          {{#if post.allowComments}}

          <!-- Comments Form -->
          <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
              <form action="/admin/comments/{{post._id}}" method="POST">
                <div class="form-group">
                  <textarea name="text" class="form-control" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Post Comment</button>
              </form>
            </div>
          </div>
          {{else}}
          <h3>Comments are not allowed for this post</h3>
          <br>
          <hr>
        {{/if}}
        {{else}}
          You need to login to comment &nbsp;<a href="/login">login</a>
          <hr>
        {{/if}}
          <!-- Single Comment -->
          {{#each post.comments}}
          <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
            <div class="media-body">
              <h5 class="mt-0">{{user.firstName}}</h5>
              {{text}}
            </div>
          </div>
          {{/each}}
        </div>


        <!-- Sidebar Widgets Column -->
            {{> home/sidebar}}


      </div>
<!-- /.row -->