<div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">

        <h1 class="my-4">Home</h1>
        {{#each posts}}
            <div class="card mb-4">
                <img class="card-img-top" src="/uploads/{{postImage}}" alt="Card image cap">
                <div class="card-body">
                    <h2 class="card-title">{{title}}</h2>
                    <p class="card-text">{{description}}</p>
                    <a href="/post/{{_id}}" class="btn btn-primary">Read More &rarr;</a>
                </div>
                <div class="card-footer text-muted">
                  Posted on {{dateFormat date 'MMMM Do YYYY'}} by
                    <a href="#">Start Bootstrap</a>
                </div>
            </div>
        {{/each}}
        <!-- Blog Post -->
        

        

        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
            {{#paginate current=current pages=pages}}{{/paginate}}
        </ul>

    </div>

    <!-- Sidebar Widgets Column -->
    {{> home/sidebar}}

</div>