<div class="container">
    <h1>All Posts</h1>
    {{> shared/form-messages}}
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Image</th>
                <th>Status</th>
                <th>Category</th>
                <th>Comments</th>
                <th>Post Date</th>
                <th>View</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>
                <td>{{title}}</td>
                <td><img height="50" src="/uploads/{{postImage}}"></td>
                <td>{{status}}</td>
                <td>{{category.name}}</td>
                <td>
                    {{#if allowComments}}
                        Allowed
                        {{else}}
                        Not allowed
                    {{/if}}
                </td>
                <td>{{dateFormat date 'MMMM Do YYYY'}}</td>
                <td><a href="/post/{{id}}">View</a></td>
                <td><a class="btn btn-info" href='/admin/posts/edit/{{_id}}'<d><i class="fa fa-pencil"></i></d></a></td>
                <td>
                    <form action="/admin/posts/{{_id}}?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i></button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>