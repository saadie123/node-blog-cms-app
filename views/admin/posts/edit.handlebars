<div class="container">
    <div class="row">
        <div class="col-md-8 col-xs-12">
            <h1>Edit Post</h1>
            {{#if errors}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <ul style='margin:0'>
                        {{#each errors}}
                            <li>{{error}}</li>
                        {{/each}}
                    </ul>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {{/if}}
            <form action="/admin/posts/edit/{{post._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input name="title" type="text" value="{{post.title}}" id="title" class="form-control" placeholder="Enter title">
                </div>
                <div class="form-group">
                    <label for="postImage">Post Image</label>
                    <input name="postImage" type="file" id="postImage" class="form-control" accept="image/*">
                </div>
                <div class="form-group">
                    <label for="status">Status</label>
                    <select name="status" id="status" value="{{post.status}}" class="form-control">
                    {{#select post.status}}
                         <option value="public">Public</option>
                         <option value="private">Private</option>
                         <option value="draft">Draft</option>
                    {{/select}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="description" id="description" class="form-control" cols="30" rows="7">{{post.description}}</textarea>
                </div>
                <div class="form-check">
                    <input name="allowComments" type="checkbox" {{#if post.allowComments}} checked="checked" {{/if}} class="form-check-input" id="allowComments">
                    <label class="form-check-label" for="allowComments">Allow Comments</label>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>